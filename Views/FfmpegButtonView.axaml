<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:common="clr-namespace:upeko.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="common:FfmpegDepViewModel"
             x:Class="upeko.Views.FfmpegButtonView">
    <Border 
        CornerRadius="4"
        Background="#24292e"
        Padding="4">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock 
                Text="ffmpeg"
                Foreground="White"
                FontWeight="Bold"
                Margin="1"
                Padding="4,0" />
            
            <!-- Checking State - Orange with refresh emoji -->
            <Border 
                IsVisible="{Binding IsChecking}"
                Background="Orange" 
                CornerRadius="2" 
                Padding="2,0">
                <TextBlock 
                    Text="🔄 ..." 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Padding="4,0" />
            </Border>
            
            <!-- Not Installed State - Red with thumbs down emoji -->
            <Border 
                IsVisible="{Binding IsNotInstalled}"
                Background="Red" 
                CornerRadius="2" 
                Padding="2,0"
                Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <TextBlock 
                        Text="👎" 
                        Foreground="White" 
                        FontWeight="Bold"
                        Padding="4,0" />
                    <Button 
                        Content="Install" 
                        Command="{Binding InstallCommand}"
                        Margin="4,0,0,0"
                        Foreground="White"
                        Background="#0366d6"
                        Cursor="Hand"
                        Padding="4,0" />
                </StackPanel>
            </Border>
            
            <!-- Installed State - Green with thumbs up emoji -->
            <Border 
                IsVisible="{Binding IsInstalled}"
                Background="#28a745" 
                CornerRadius="2" 
                Padding="2,0">
                <TextBlock 
                    Text="👍" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Padding="4,0" />
            </Border>
        </StackPanel>
    </Border>
</UserControl>