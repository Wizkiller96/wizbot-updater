<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:upeko.ViewModels"
             xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             mc:Ignorable="d"
             x:Class="upeko.Views.BotListItem"
             x:DataType="viewModels:BotItemViewModel">
    <Button Command="{Binding OpenBotCommand}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderThickness="1"
            Padding="4"
            Margin="6">
        <Grid>
            <!-- Version (Top Left) -->
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="2">
                <StackPanel>
                    <TextBlock Text="v"
                               FontSize="13"
                               Opacity="0.7" />
                    <TextBlock Text="{Binding Version}"
                               FontSize="13"
                               Opacity="0.7" />
                </StackPanel>

                <!-- Update Available Indicator -->
                <Border IsVisible="{Binding UpdateAvailable}"
                        Background="{DynamicResource SystemAccentColor}"
                        CornerRadius="4"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Update!"
                                   FontSize="10"
                                   Padding="2"
                                   FontWeight="Medium" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Status Badge (Top Right) -->
            <Border HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Background="{Binding StatusColor}"
                    CornerRadius="6"
                    Padding="4"
                    Margin="0">
                <TextBlock Text="{Binding Status}"
                           FontSize="12"
                           FontWeight="Medium"
                           Foreground="White">
                </TextBlock>
            </Border>


            <!-- Bot Avatar (Center) -->
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <Border CornerRadius="32"
                        Width="64" Height="64"
                        Margin="0,0,0,12"
                        ClipToBounds="True">
                    <Panel>
                        <!-- Gradient Background for Avatar -->
                        <Border>
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                    <GradientStop Offset="0" Color="#0078D7" />
                                    <GradientStop Offset="1" Color="#00BCF2" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        <!-- Avatar Image -->
                        <Image asyncImageLoader:ImageLoader.Source="{Binding Icon}"
                               Width="64" Height="64"
                               Stretch="UniformToFill" />
                    </Panel>
                </Border>

                <!-- Bot Name (Under Avatar) -->
                <TextBlock Text="{Binding Name}"
                           FontSize="18"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center" />
            </StackPanel>
        </Grid>
    </Button>
</UserControl>